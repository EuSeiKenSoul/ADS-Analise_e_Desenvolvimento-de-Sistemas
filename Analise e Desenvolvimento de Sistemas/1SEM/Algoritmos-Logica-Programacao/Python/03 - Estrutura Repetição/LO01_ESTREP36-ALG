Declarar
    numN, i, fatorial: inteiro;
    soma: real;
Inicio
    Ler numN;
    Enquanto (numN <= 0) faça
        Ler numN;
    FimEnquanto

    soma = 1.0;
    fatorial = 1;
    
    Enquanto (fatorial <= numN) faça
        soma = soma + (1 / fatorial);
        fatorial = fatorial + 1;
    FimEnquanto

    Mostrar "A soma da série 1 + 1/1! + 1/2! + ... + 1/", numN, "! é: ", soma;
Fim
